{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "monthly-income-data-for-vegalite.csv"},
    "vconcat": [
        {
            "width": 907,
            "height": 600,
            "title": {
                "text": "Average Income vs Date (Scatter Plot)",
                "fontSize": 24,
                "font": "Sans Serif",
                "fontWeight": "bold"
            },
            "layer": [
                {
                    "params": [
                        {
                            "name": "brush",
                            "select": {"type": "interval", "encodings": ["x", "y"]}
                        }
                    ],
                    "mark": "point",
                    "encoding": {
                        "x": {
                            "field": "Date",
                            "type": "temporal",
                            "title": "Date",
                            "axis": {
                                "titlePadding": 20
                            },
                            "scale": {
                                "domain": ["2018-12-01", "2020-1-31"]
                            }
                        },
                        "y": {
                            "field": "income",
                            "type": "quantitative",
                            "title": "Income (MYR)",
                            "axis": {
                                "titlePadding": 20
                            }
                        },
                        "color": {
                            "field": "State",
                            "type": "nominal"
                        },
                        "tooltip": [
                            {"field": "State"},
                            {"field": "Date", "type": "temporal", "title": "Date"},
                            {"field": "income", "type": "quantitative", "title": "Income (MYR)", "format": ".2f"}
                        ]
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "baseline": "middle",
                        "dx": 5,
                        "dy": -10,
                        "fontSize": 12,
                        "font": "Arial"
                    },
                    "encoding": {
                        "x": {"value": 50},
                        "y": {"value": 20},
                        "text": {"value": "Selangor"},
                        "color": {"value": "#ed7d31"}
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "baseline": "middle",
                        "dx": 5,
                        "dy": 10,
                        "fontSize": 12,
                        "font": "Arial"
                    },
                    "encoding": {
                        "x": {"value": 50},
                        "y": {"value": 20},
                        "text": {"value": "consistently shows\nhighest income levels"}
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "baseline": "middle",
                        "dx": -5,
                        "dy": -10,
                        "fontSize": 12,
                        "font": "Arial"
                    },
                    "encoding": {
                        "x": {"value": 850},
                        "y": {"value": 500},
                        "text": {"value": "Negeri Sembilan"},
                        "color": {"value": "#90bf5e"}
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "baseline": "middle",
                        "dx": -5,
                        "dy": 10,
                        "fontSize": 12,
                        "font": "Arial"
                    },
                    "encoding": {
                        "x": {"value": 850},
                        "y": {"value": 500},
                        "text": {"value": "consistently shows\nlowest income levels"}
                    }
                }
            ]
        },
        {
            "width": 907,
            "height": 600,
            "title": {
                "text": "Filtered Average Income vs Date (Bar chart)",
                "fontSize": 24,
                "font": "Sans Serif",
                "fontWeight": "bold"
            },
            "layer": [
                {
                    "transform": [
                        {"filter": {"param": "brush"}},
                        {
                            "aggregate": [{
                                "op": "mean",
                                "field": "income",
                                "as": "average_income"
                            }],
                            "groupby": ["State"]
                        }
                    ],
                    "mark": "bar",
                    "encoding": {
                        "x": {
                            "field": "State",
                            "type": "nominal",
                            "title": "State",
                            "sort": "-y"
                        },
                        "y": {
                            "field": "average_income",
                            "type": "quantitative",
                            "title": "Average Income (MYR)",
                            "axis": {
                                "titlePadding": 20
                            }
                        },
                        "color": {
                            "field": "State",
                            "type": "nominal"
                        },
                        "tooltip": [
                            {"field": "State"},
                            {"field": "average_income", "type": "quantitative", "title": "Average Income (MYR)", "format": ".2f"}
                        ]
                    }
                }
            ]
        }
    ],
    "config": {
        "view": {"stroke": null},
        "axis": {
            "gridColor": "#ddd",
            "labelFontSize": 11,
            "titleFontSize": 16
        },
        "background": "#f3f3f3",
        "legend": {
            "labelFontSize": 8,
            "titleFontSize": 16,
            "rowPadding": 10,
            "labelFontWeight": "bold"
        }
    }
}